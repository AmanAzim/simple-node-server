    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\App.js",
            "restart": true,// to restart the debuger after each change
            "runtimeExecutable": "nodemon", //To make the entry/start point the App.js //For this we need to install nodemon globally -g
            "console": "integratedTerminal"
        }
    ]
}